<h1>Add new courses</h1>

<form action="/add" method="POST">

  <div class="input-field">
    <input id="title" type="text" class="validate" name="title" required />
    <label for="title">Course name</label>
    <span class="helper-text" data-error="Enter name"></span>
  </div>

  <div class="input-field">
    <input
      id="price"
      type="number"
      class="validate"
      required
      name="price"
      min="1"
    />
    <label for="price">Course price</label>
    <span class="helper-text" data-error="Enter price"></span>
  </div>

  <div class="input-field">
    <input id="image" type="text" class="validate" required name="img" />
    <label for="image">Image URL</label>
    <span class="helper-text" data-error="Enter image url"></span>
  </div>

  <button type="submit" class="btn btn-primary">Enter</button>
</form>