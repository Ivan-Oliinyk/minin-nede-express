<h1>Edit course {{course.title}}</h1>

<form action="/courses/edit" method="POST">

  <div class="input-field">
    <input
      id="title"
      type="text"
      class="validate"
      name="title"
      required
      value="{{course.title}}"
    />
    <label for="title">Course name</label>
    <span class="helper-text" data-error="Enter name"></span>
  </div>

  <div class="input-field">
    <input
      id="price"
      type="number"
      class="validate"
      required
      name="price"
      min="1"
      value="{{course.price}}"
    />
    <label for="price">Course price</label>
    <span class="helper-text" data-error="Enter price"></span>
  </div>

  <div class="input-field">
    <input
      id="img"
      type="text"
      class="validate"
      required
      name="img"
      value="{{course.img}}"
    />
    <label for="img">Image URL</label>
    <span class="helper-text" data-error="Enter image url"></span>
  </div>

  <input type="hidden" name="id" value="{{course.id}}" />

  <button type="submit" class="btn btn-primary">Enter</button>
</form>